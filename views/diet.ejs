  <%- include('./partials/header'); %>
  <div class='diet-wrapper d-flex justify-content-center align-items-center ' style='min-height:100vh'>
    <div class='container'>

      <div class='row justify-content-center align-items-center'>

        <div class='col-md-6'>

          <h2 class='text-center'>Pick Your Diet</h2>

          <div class='diet-select border'>
            <form>

  
            <div class="diets d-flex justify-content-center align-items-center flex-column p-5 ">
