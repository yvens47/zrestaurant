                    <label class='p-2 border shadow-sm mb-2' for="<%=data.diets[i] %>">
                      <input type='checkbox'value="<%=data.diets[i] %>"  id="<%=data.diets[i] %>" /> 
                      <%=data.diets[i] %>
                    </label>
                     
                  
                <% } %>   
            </div>
                 <div class='diets-check'>
                  <button class='btn btn-primary'>Submit</button>
                  
                  </div>
  
</form>
                 
          </div>
          
        </div>

        
      </div>
    </div>

  </div>